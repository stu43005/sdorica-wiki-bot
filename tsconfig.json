{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "outDir": "dist",
    "lib": [
      "es7",
      "dom"
    ],
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./typings",
    ],
    "paths": {
      "react": [
        "../../node_modules/preact/compat/"
      ],
      "react-dom": [
        "../../node_modules/preact/compat/"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "include": [
    "*.ts",
    "*.tsx",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}